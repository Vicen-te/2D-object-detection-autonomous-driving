{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}",
            "python": "${workspaceFolder}/.venv/Scripts/python"  // Ruta al intérprete en el entorno virtual (ajustado según tu sistema)
        }
    ]
}
